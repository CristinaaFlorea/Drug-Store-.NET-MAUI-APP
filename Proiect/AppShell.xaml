    xmlns:local="clr-namespace:Proiect"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Welcome!" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="Products" ContentTemplate="{DataTemplate local:MainPage}"/>
